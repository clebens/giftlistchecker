<h1>Listing measurements</h1>

<table>
  <tr>
    <th>User</th>
    <th>Tshirt size</th>
    <th>Waist</th>
    <th>Inseam</th>
    <th>Shoe size</th>
    <th>Hat size</th>
    <th>Dress shirt size</th>
    <th>Bust size</th>
    <th>Dress size</th>
    <th>Hip size</th>
  </tr>

<% @measurements.each do |measurement| %>
  <tr>
    <td><%=h measurement.user_id %></td>
    <td><%=h measurement.tshirt_size %></td>
    <td><%=h measurement.waist %></td>
    <td><%=h measurement.inseam %></td>
    <td><%=h measurement.shoe_size %></td>
    <td><%=h measurement.hat_size %></td>
    <td><%=h measurement.dress_shirt_size %></td>
    <td><%=h measurement.bust_size %></td>
    <td><%=h measurement.dress_size %></td>
    <td><%=h measurement.hip_size %></td>
    <td><%= link_to 'Show', measurement %></td>
    <td><%= link_to 'Edit', edit_measurement_path(measurement) %></td>
    <td><%= link_to 'Destroy', measurement, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

